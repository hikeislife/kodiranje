{{>articles/floatingMenu}}
<article>
  <section>
    <h1>Novi članak</h1>
    {{#if errorMessage}}<p class="adminError">{{errorMessage}}</p>{{/if}}
    <div>
      <form      method=      "POST"
                 action=      "/admin/addPost"
                 enctype=     "multipart/form-data">
        <fieldset>
          <legend>Osnovni sadržaj</legend>
        <div     class=       "adminInput">
          <label for=         "selectedURL">   Naziv artikla <span class="required"><sup>*</sup></span></label>
          <input type=        "text" 
                 class=       "admin" 
                 name=        "selectedURL" 
                 id=          "selectedURL" 
                 placeholder= "Ovo određuje url strane"
                 required>
        </div>
        <div     class=       "adminInput">
          <label for=         "navName">       Skraćeni naziv <span class="required"><sup>*</sup></span></label>
          <input type=        "text" 
                 class=       "admin" 
                 name=        "navName" 
                 id=          "navName" 
                 placeholder= "Ovo određuje šta piše u meniju"
                 required>
        </div>
        <div     class=       "adminInput">
          <label for=         "articleContent">Artikal <span class="required"><sup>*</sup></span></label><br>
          <textarea name=     "articleContent" 
                 id=          "articleContent" 
                 style=       "width:100%;"
                 placeholder= "Unesi sadržaj bez <article> taga"
                 required
                 class=       "admin"></textarea>
        </div>
        <div        class=    "adminInput">
          <label    for=      "courseName">    Kurs</label>
          <select   class=    "admin" 
                    id=       "courseName"
                    name=     "courseName">
            {{#each courseList}}
              <option value="{{setId}}"> {{name}} </option>
            {{/each}}
            
          </select>
        </div>
        <div     class=       "adminInput">
          <label for=         "subSec">       Podgrupa</label><br>
          <input type=        "text" 
                 id=          "subSec" 
                 class=       "admin" 
                 name=        "subSec"
            
                 placeholder= "Podgrupa">
        </div>
        <div     class=       "adminInput">
          <label for=         "tags">          Tagovi</label><br>
          <input type=        "text" 
                 id=          "tags" 
                 class=       "admin m2r" 
                 name=        "tags" 
                 placeholder= "(razdvojeni zarezom)">
        </div>
        <div     class=       "moveToFloatingMenu">
          <input type=        "checkbox" 
                 name=        "published" 
                 id=          "published">
          <label for=         "published"
                 class=       "reorderCheckbox"></label>
        </div>
        </fieldset>

        <fieldset>
          <legend>SEO optimizacija</legend>
        <div     class=       "adminInput">
          <label for=         "googTitle">     Naslov google pretrage</label><br>
          <input type=        "text" 
                 id=          "googTitle" 
                 class=       "admin countMe m2r" 
                 name=        "googTitle" 
                 placeholder= "optimalno do 80 karaktera" >
          <span  class=       "adminCounter googTitle" 
               data-counter=  "70">70</span>
        </div>
        <div     class=       "adminInput">
          <label for=         "googDesc">      Opis u google pretrazi</label><br>
          <input type=        "text" 
                 id=          "googDesc" 
                 class=       "admin m2r countMe" 
                 name=        "googDesc"
            
                 placeholder= "Opiši sadržaj strane, do oko 155 karaktera">
          <span  class=       "adminCounter googDesc" 
                 data-counter="155">155</span>
        </div>
        </fieldset>

        <fieldset>
          <legend>Optimizacija za društvene mreže</legend>
        <div     class=       "adminInput">
          <label for=         "socTitle">      Naslov posta na društvenim mrežama</label><br>
          <input type=        "text" 
                 id=          "socTitle" 
                 class=       "admin countMe m2r" 
                 name=        "socTitle" 
                 placeholder= "(za društvene mreže)">
          <span  class=       "adminCounter socTitle" 
                 data-counter="88">88</span>
        </div>
        <div     class=       "adminInput">
          <label for=         "socDesc">       Opis u postu na društvenim mrežama</label><br>
          <input type=        "text" 
                 id=          "socDesc" 
                 class=       "admin m2r countMe" 
                 name=        "socDesc"
            
                 placeholder= "Opis za društvene mreže, do 200 karaktera">
          <span  class=       "adminCounter socDesc" 
                 data-counter="200">200</span>
        </div>
        <div     class=       "adminInput">
          <label for=         "socImage"
                 class="uploadOG">
                  Slika za društvene mreže 1200x630px sa banerom</label>
          <input type=        "file" 
                 class=       "admin" 
                 id=          "socImage" 
                 name=        "socImage">
        </div>
        </fieldset>
      <input     type=        "submit"
                 id=          "dugme"
                 value=       "Sačuvaj"
                 class=       "admin-wideBtn admin-saveButton"
                 style=       "display: none">
    </div>
    </form>
  </section>
</article>

<script type="module" src="../../js/articles/addNewArticle.js"></script>